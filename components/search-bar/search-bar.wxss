/* components/search-bar.wxss */
.bar-layout {
  height: 110rpx;
  width: 100%;

  border-bottom: 0.5rpx solid #ccc;

  display: flex;
  flex-direction: row;
  align-items: center;

  background-color: #fafafa;

  position: relative;
}

.bar-layout .search-icon {
  position: absolute;
  left: 35rpx;
  z-index: 10;
  width: 45rpx;
  height: 45rpx;
  background-size: cover;

  background-image: url(data:image/svg+xml;utf8;base64,)
}

.bar-layout input {
  flex-grow: 1;
  margin: 5rpx 15rpx;
  border: 0.5rpx solid #ccc;
  border-radius: 50rpx;

  line-height: 70rpx;
  height: 70rpx;

  padding: 0 25rpx 0 80rpx;
  font-size: 30rpx;

  background-color: #ffffff;
}